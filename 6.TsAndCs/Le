    <!-- Countdown Timer -->

    <script>
      // Set the date for your promotion end
      // Set the date for your promotion end
      const promotionEnd = new Date('2025-08-27T20:00:59').getTime();
      const countdownElement = document.getElementById('countdown');

      function updateCountdown() {
        const now = new Date().getTime();
        const distance = promotionEnd - now;

        if (distance < 0) {
          if (countdownElement) {
            countdownElement.innerHTML = 'Promotion has ended!';
          }
          return; // Stop calling updateCountdown
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        countdownElement.innerHTML = `${days}days ${hours}hours ${minutes}m ${seconds}s`;

        // Request the next frame
        requestAnimationFrame(updateCountdown);
      }

      // Start the countdown
      updateCountdown();

    </script>




